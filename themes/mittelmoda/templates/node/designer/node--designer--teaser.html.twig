{#
/**
 * Node Designer Teaser
 */
#}
{%
  set classes = [
    'node-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'is-promoted',
    node.isSticky() ? 'is-sticky',
    not node.isPublished() ? 'is-unpublished',
    view_mode ? view_mode|clean_class,
    'clearfix',
  ]
%}

{%  set classes = classes|merge(['col-sm-6', 'col-md-3', 'margin-b-1']) %}

<div{{ attributes.addClass(classes) }}>

  {{ title_prefix }}
  {{ title_suffix }}

  <div{{ content_attributes.addClass('content') }}>
    <a href="{{ url }}" title="{{ content.title.0 }}">
      <span class="wrapper-img-over">
        {{ content.field_image.0 }}
        <span class="wrapper-over">
          <span class="wrapper-over-content text-center">
            <span class="designer-teaser--text negative">
              <span class="designer-teaser--title h4">{{ content.title.0 }}</span>
              <span class="designer-teaser--country p small">{{ content.field_country }}</span>

              <span class="designer-teaser--more h4">View</span>
            </span>
          </span>
        </span>
      </span>
    </a>
  </div>
</div>
