{#
/**
 * Node Page Full
 * use {{ kint(content)}} to inspect content variable
 * use {{ kint(_context) }} to inspect every variable passed to this file
 * for more information: 
 * https://www.drupal.org/node/1906780
 */
#}
{%
  set classes = [
    'node-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'is-promoted',
    node.isSticky() ? 'is-sticky',
    not node.isPublished() ? 'is-unpublished',
    view_mode ? view_mode|clean_class,
    'clearfix',
  ]
%}

<div{{ attributes.addClass(classes) }}>

  {{ title_prefix }}
  {{ title_suffix }}

  <div{{ content_attributes.addClass('content') }}>
    <div class="row">
      <div class="container margin-b-2">
        <div class="c-plain">
          {{content.title}}
          {{content.body}}
        </div>
        
        {{content.field_content}}
        
      </div>
    </div>

    {{content.sponsor}}

    {% if content.field_ref_nodes.0 %}
      <div class="row row-light row-page-news">
        <div class="container margin-v-2">
          {{content.field_ref_nodes}}
        </div>
      </div>
    {% endif %}
  </div>
</div>
