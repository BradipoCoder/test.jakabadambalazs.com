{#
/**
 * Node Cover Teaser
 */
#}
{%
  set classes = [
    'node-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'is-promoted',
    node.isSticky() ? 'is-sticky',
    not node.isPublished() ? 'is-unpublished',
    view_mode ? view_mode|clean_class,
    'clearfix',
  ]
%}

<div{{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  {{ title_suffix }}

  <div{{ content_attributes.addClass('content') }}>
    <div class="mittelmoda-main-title">
      {{ content.body }}
    </div>
    <div class="front-cta">
      <a href="{{content.url}}" class="big-cta-link">
        <span class="big-cta--content negative">
          <span class="h2">{{ content.field_cta_title.0 }}</span>
          <span class="h4">{{ content.field_cta_subtitle.0 }}</span>
        </span>
        <span class="btn btn-white btn-lg btn-arrow"></span>
      </a>
    </div>
  </div>
</div>
