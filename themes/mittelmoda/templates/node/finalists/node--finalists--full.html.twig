{#
/**
 * Node Finalists
 */
#}
{%
  set classes = [
    'node-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'is-promoted',
    node.isSticky() ? 'is-sticky',
    not node.isPublished() ? 'is-unpublished',
    view_mode ? view_mode|clean_class,
    'clearfix',
  ]
%}

{% if view_mode == 'teaser' %}
  {%  set classes = classes|merge(['col-sm-6', 'col-md-4']) %}
{% endif %}

<div{{ attributes.addClass(classes) }}>

  {{ title_prefix }}
  {{ title_suffix }}

  <div{{ content_attributes.addClass('content') }}>
    <div class="row">
      <div class="container margin-b-2">
        <div class="header-finalists margin-b-15">
          {{content.title}}
          <p class="lead">Young fashion designers</p>
        </div>
        <div class="row row-finalists">
          {{content}}
        </div>
      </div>
    </div>
  </div>
</div>
